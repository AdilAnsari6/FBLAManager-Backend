@model IEnumerable<ADSBackend.Models.Meeting>

@{
    ViewData["Title"] = "Meetings";
}

<h2>Meetings</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Meeting</a>
</p>
<div class="ibox">
    <div class="ibox-content">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Organizer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EventName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Capacity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Start)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.End)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AllDay)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MeetingAttendees)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var meeting in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => meeting.Organizer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => meeting.ContactId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => meeting.EventName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => meeting.Capacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => meeting.Start)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => meeting.End)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => meeting.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => meeting.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => meeting.AllDay)
                    </td>
                    <td>
                        @string.Join(", ", meeting.MeetingAttendees.Select(ma => ma.Member?.Username))
                    </td>
                    <td>
                        @await Html.PartialAsync("_CrudButtons", meeting.MeetingId)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>