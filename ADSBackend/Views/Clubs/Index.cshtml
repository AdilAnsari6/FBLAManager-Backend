@model IEnumerable<ADSBackend.Models.Club>

@{
    ViewData["Title"] = "Clubs";
}

<h2>Clubs</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Club</a>
</p>
<div class="ibox">
    <div class="ibox-content">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Creator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClubMembers)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var club in Model)
                {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => club.Creator)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => club.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => club.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => club.Password)
                    </td>
                    <td>
                        @string.Join(", ", club.ClubMembers.Select(cm => cm.Member?.Email))
                    </td>
                    <td>
                        @await Html.PartialAsync("_CrudButtons", club.ClubId)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>