@model ADSBackend.Models.ClubViewModels.ClubViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="ibox-content">
    <h2>Edit Club</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ClubId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MemberIds" class="control-label">Members</label>
                    <select asp-for="MemberIds" asp-items="ViewBag.Members" class="form-control multiselect" multiple="multiple"></select>
                    <span asp-validation-for="MemberIds" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a class="btn btn-danger btn-bitbucket" asp-action="Index"><i class="fa fa-chevron-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
            $(document).ready(function () {

                $('.multiselect').select2();

            });
    </script>

}
