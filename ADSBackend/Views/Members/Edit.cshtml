@model ADSBackend.Models.MemberViewModels.MemberViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-5">
        <div class="ibox-content b-r-md">
            <h2>Edit Member</h2>

            <hr />

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MemberId" />
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Bio</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="profileImageSource" class="control-label">Profile Picture</label>
                    <input asp-for="profileImageSource" class="form-control" />
                    <span asp-validation-for="profileImageSource" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZipCode" class="control-label">Zip Code</label>
                    <input asp-for="ZipCode" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade" class="control-label"></label>
                    <select asp-for="Grade" class="form-control">
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                    </select>
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" data-mask="(999) 999-9999" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClubIds" class="control-label">Clubs</label>
                    <select asp-for="ClubIds" asp-items="ViewBag.Clubs" class="form-control multiselect" multiple="multiple"></select>
                    <span asp-validation-for="ClubIds" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MeetingIds" class="control-label">Meetings</label>
                    <select asp-for="MeetingIds" asp-items="ViewBag.Meetings" class="form-control multiselect" multiple="multiple"></select>
                    <span asp-validation-for="MeetingIds" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a class="btn btn-danger btn-bitbucket" asp-action="Index"><i class="fa fa-chevron-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Styles {

    <link rel="stylesheet" href="~/lib/jasny-bootstrap/jasny-bootstrap.min.css" />
}

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="~/lib/jasny-bootstrap/jasny-bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('.multiselect').select2();

        });
    </script>

}
