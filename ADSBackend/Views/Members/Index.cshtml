@model IEnumerable<ADSBackend.Models.Member>

@{
    ViewData["Title"] = "Members";
}

<h2>Members</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Member</a>
</p>
<div class="ibox">
    <div class="ibox-content">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        Clubs
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => member.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => member.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => member.Phone)
                    </td>
                    <td>
                        @string.Join(", ", member.ClubMembers.Select(cm => cm.Club?.Name))
                    </td>
                    <td>
                        @await Html.PartialAsync("_CrudButtons", member.MemberId)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>