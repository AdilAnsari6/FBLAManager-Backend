@model IEnumerable<ADSBackend.Models.Member>

@{
    ViewData["Title"] = "Members";
}
<div class="ibox">
    <div class="ibox-title b-r-md">
        <h2>Members</h2>
    </div>
    <div class="ibox-content b-r-md">
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Create New Member</a>
        <form asp-action="Index" method="get" style="float:right">
            <div class="form-inline">
                Find by name: <input class="form-control" name="search" value="@ViewData["Search"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index" class="btn btn-default">Back to Full List</a>
            </div>
        </form>
        <hr />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Grade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => member.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => member.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => member.Grade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => member.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => member.Phone)
                        </td>
                        <td>
                            @await Html.PartialAsync("_CrudButtons", member.MemberId)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>