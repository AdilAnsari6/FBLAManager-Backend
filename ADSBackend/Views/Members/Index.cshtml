@model IEnumerable<ADSBackend.Models.Member>

@{
    ViewData["Title"] = "Members";
}

<h2>Members</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Member</a>
</p>
<div class="ibox">
    <div class="ibox-content">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MemberId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.MemberId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.MemberId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>